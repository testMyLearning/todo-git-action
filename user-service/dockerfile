# user-service/Dockerfile

# 1. Базовый образ с Java
FROM openjdk:21-jdk-slim AS build

# 2. Метаданные
LABEL maintainer="your-email@example.com"
LABEL version="1.0"
LABEL description="User Service for Todo Microservices"

# 3. Рабочая папка
WORKDIR /app

# 4. Копируем Maven файлы (для кэширования зависимостей)
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .
COPY common/pom.xml common/
COPY user-service/pom.xml user-service/

# 5. Скачиваем зависимости (кэшируется, если pom.xml не менялся)
RUN ./mvnw dependency:go-offline -B

# 6. Копируем исходники
COPY common common
COPY user-service user-service

# 7. Собираем приложение
RUN ./mvnw clean package -pl user-service -am -DskipTests

# 8. Второй этап - минимальный образ для запуска
FROM openjdk:21-jdk-slim

# 9. Создаем непривилегированного пользователя
RUN addgroup --system --gid 1001 appuser && \
    adduser --system --uid 1001 --gid 1001 appuser

# 10. Копируем собранный jar из первого этапа
COPY --from=build --chown=appuser:appuser /app/user-service/target/*.jar /app/app.jar

# 11. Переключаемся на непривилегированного пользователя
USER appuser

# 12. Открываем порт
EXPOSE 8081

# 13. Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:8081/actuator/health || exit 1

# 14. Запускаем приложение
ENTRYPOINT ["java", "-jar", "/app/app.jar"]