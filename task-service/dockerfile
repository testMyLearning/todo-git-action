# task-service/Dockerfile
FROM openjdk:21-jdk-slim AS build

LABEL maintainer="your-email@example.com"
LABEL version="1.0"
LABEL description="Task Service for Todo Microservices"

WORKDIR /app

# Кэширование зависимостей
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .
COPY common/pom.xml common/
COPY task-service/pom.xml task-service/

RUN ./mvnw dependency:go-offline -B

# Копируем исходники
COPY common common
COPY task-service task-service

# Сборка
RUN ./mvnw clean package -pl task-service -am -DskipTests

# Финальный образ
FROM openjdk:21-jdk-slim

RUN addgroup --system --gid 1001 appuser && \
    adduser --system --uid 1001 --gid 1001 appuser

COPY --from=build --chown=appuser:appuser /app/task-service/target/*.jar /app/app.jar

USER appuser
EXPOSE 8082

HEALTHCHECK --interval=30s --timeout=3s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:8082/actuator/health || exit 1

ENTRYPOINT ["java", "-jar", "/app/app.jar"]